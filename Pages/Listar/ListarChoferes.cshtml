@page
@model MyApp.Namespace.ListarChoferesModel
@{
    ViewData["Title"] = "Listado de Choferes";
}
<div class="container">
    <h1>Listado de Choferes</h1>

    @if (Model.ListaChoferes.Count == 0)
    {
        <p style="margin-top: 7%;text-align: center;font-weight: bold;color:red">No hay choferes registrados.</p>
    }
    else
    {
    <table style="width: 100%; border-collapse: collapse; margin-top: 20px;" class="table table-striped">
        <thead>
            <tr>
                @* <th>ID</th> *@
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Estado</th>
                <th>Distancia recorrida (km)</th>
                @* <th>Acciones</th> *@
            </tr>
        </thead>
        <tbody>
            @foreach (var chofer in Model.ListaChoferes)
            {
                <tr>
                    @* <td>@chofer.Id</td> *@
                    <td>@chofer.Nombre</td>
                    <td>@chofer.Apellido</td>
                    <td>@(chofer.Disponibilidad ? "Disponible" : "No Disponible")</td>
                    <td>@chofer.Kilometros</td>
                    @* <td>
                        <a href="/Actualizar/ActualizarChofer?id=@chofer.Id">Editar</a>
                    </td> *@
                </tr>
            }
        </tbody>
    </table>
    }
</div>
