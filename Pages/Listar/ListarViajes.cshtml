@page
@model MyApp.Namespace.ListarViajesModel
@{
    <div class="container">
    <h1>Listado de Viajes</h1>
    @if (Model.ListaViajes.Count == 0)
    {
        <p style="margin-top: 10%;text-align: center;font-weight: bold;color:red">No hay viajes registrados.</p>
    }
    else
    {
    <table style="width: 100%; border-collapse: collapse; margin-top: 20px;" class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ciudad Origen</th>
                <th>Ciudad Destino</th>
                <th>Fecha Inicio</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var viaje in Model.ListaViajes)
            {
                <tr>
                    <td>@viaje.Id</td>
                    <td>@viaje.CiudadOrigen</td>
                    <td>@viaje.CiudadDestino</td>
                    <td>@viaje.FechaInicio.ToString("dd/MM/yyyy")</td>
                    <td>@viaje.Estado</td>
                    <td>
                        <a href="/Viaje/ActualizarViaje?id=@viaje.Id">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
</div>
}
