@page
@model MyApp.Namespace.ListarViajeModel
@{
    <div class="container">
    <h1>Listado de Viajes</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Ciudad Origen</th>
                <th>Ciudad Destino</th>
                <th>Fecha Inicio</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var viaje in Model.ListaViajes)
            {
                <tr>
                    <td>@viaje.Id</td>
                    <td>@viaje.CiudadOrigen</td>
                    <td>@viaje.CiudadDestino</td>
                    <td>@viaje.FechaInicio.ToString("dd/MM/yyyy")</td>
                    <td>@viaje.Estado</td>
                    <td>
                        <a href="/CRUD/ActualizarViaje?id=@viaje.Id">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
}
