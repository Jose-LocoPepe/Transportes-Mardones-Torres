@page "{id:int?}"
@model MyApp.Namespace.ActualizarChoferModel
@{
    ViewData["Title"] = "Actualizar Chofer";

<h1>Actualizar Chofer</h1>

@* if(Model.chofer == null)
{
    <p>No se encontró el chofer con el ID especificado.</p>
} else {
    <form method="post">
        <table style="border-collapse: collapse; width: 50%; margin-bottom: 20px;">
            <tr>
                <td style="padding: 8px; border: 1px solid #ddd;">Nombre Actual:</td>
                <td style="padding: 8px; border: 1px solid #ddd;">@Model.chofer.Nombre</td>
            </tr>
            <tr>
                <td style="padding: 8px; border: 1px solid #ddd;">Apellido Actual:</td>
                <td style="padding: 8px; border: 1px solid #ddd;">@Model.chofer.Apellido</td>
            </tr>
            
        </table>

        <h3>Actualizar Datos</h3>
        <div>
            <label for="nombre">Nuevo Nombre:</label>
            <input type="text" id="nombre" name="nombre" value="@Model.chofer.Nombre" 
                   maxlength="50" 
                   required />
        </div>
        
        <div>
            <label for="apellido">Nuevo Apellido:</label>
            <input type="text" id="apellido" name="apellido" value="@Model.chofer.Apellido" 
                   maxlength="50" 
                   required />
        </div>
        
        <div>
            <label for="disponibilidad">Disponibilidad:</label>
            <select id="disponibilidad" name="disponibilidad">
                <option value="true" selected="@(Model.chofer.Disponibilidad)">Disponible</option>
                <option value="false" selected="@(Model.chofer.Disponibilidad == false)">No Disponible</option>
            </select>
        </div>
        <button type="submit" style="padding: 10px 20px; background-color: #007bff; color: white; border: none; border-radius: 4px;">Guardar Cambios</button>
    </form>
    
} *@
}
